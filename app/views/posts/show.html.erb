<div class="post-show">
  <div class="post-show-photo-and-info">
    <%= cl_image_tag(@post.photo.image.key, class: "photo") if @post.photo.image.attached? %>
    <div class="post-info">
      <%= render 'posts/show_header', post: @post %>
      <% if @post.url %>
        <%= render 'components/url_link', url: @post.url %>
      <% end %>
      <h1 class="title"><%= @post.title %></h1>
      <p class="description"><%= @post.description %></p>
      <%= render 'components/avatar', image: @post.user.avatar, size: 40, link: profile_path(@post.user), title: @post.user.format_username %>
    </div>
  </div>
  <div class="location-section">
    <h2>Location</h2>
<!--     <% location = @post.location %>
    <div style="border: 1px solid black; padding: 10px">
      <p>latitude: <%= location.latitude %></p>
      <p>longitude: <%= location.longitude %></p>
    </div> -->
    <div id='map'></div>
    <script>
        mapboxgl.accessToken = "<%= ENV['MAPBOX_TOKEN'] %>";
        var map = new mapboxgl.Map({
          container: 'map',
          style: 'mapbox://styles/mapbox/streets-v11',
          center: <%= location.coordinates %>,
          zoom: 9
        });
        var marker = new mapboxgl.Marker({
          color: "black"
        })
          .setLngLat(<%= location.coordinates %>)
          .addTo(map);
      </script>
  </div>
</div>

