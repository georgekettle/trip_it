<% show_info ||= false %>

<div id="post-<%= post.id %>" class="post-card" data-post="<%= post.id %>" data-location="<%= post.location.id %>">
  <div class="display-none">
    <%= render 'components/map_popup', post: post %>
  </div>
  <%= link_to post_path(post), class: "no-highlight" do %>
    <%= cl_image_tag(post.photo.image.key, width: 450, :crop => "pad") %>
  <% end %>
  <% if show_info %>
    <div class="post-info">
      <div class="title-and-location">
        <h5 class="title"><%= post.title %></h5>
        <%= render 'components/location_link', location: post.location %>
      </div>
    </div>
  <% end %>
  <div class="card-save">
    <%= render 'posts/save_button', post: post %>
  </div>
  <div class="location">
    <%= render 'components/location_link', location: post.location %>
  </div>
</div>

